package lianxi2;
import java.util.*;
import java.math.*;
public class Maath {
	public static void main(String [] args){
		double sum=0,item=0,valu=0;
		boolean boo=true;
		Scanner s=new Scanner(System.in);
		System.out.println("请输入一段包含数字的文字");
		String a=s.nextLine();
		String regex="\\D";
		String mun[]=a.split(regex);
		System.out.println("该文字中所含有的数字为：");
		for(int i=0;i<mun.length;i++){
			System.out.print(mun[i]+"  ");
			continue;
		}
		for(String s:args)
			try{
				item=Double.parseDouble(s);
				sum+=item;
			}
		catch(NumberFormatException e){
			boo=false;
		}
		if(boo){
		System.out.println();
		System.out.println("这些数字的和为："+sum);
		valu=sum/args.length;
		System.out.println("这些数字的平均值为："+valu);
		}
	}
}


for(int i=0;i<mun.length;i++){
	int d=Integer.parseInt(mun[i]);
	System.out.print(d);
	continue;
}