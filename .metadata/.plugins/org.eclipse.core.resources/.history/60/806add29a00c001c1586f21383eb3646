package gaoji_1;
import java.io.File;
import java.io.IOException;
import java.util.Scanner;
public class CMDTest {
	File f;
	CMDTest(){
		f=new File(".");
	}
	String[] getRoot(){
		File link[]=f.listRoots();
		String s[]=new String[link.length];
		for(int i=0;i<link.length;i++){
			s[i]=link[i].toString();
		}
		return s;
	}
	void getChild(){
		String line[]=f.list();
		if(f.isFile()){
			System.out.println("当前为文件，没有包含子目录和文件。");
		}
		for(String s:line){
			System.out.println(s);
		}
	}
	void updateFile(String s){
		if(s.equals("../")){
			String g=f.getAbsolutePath();
			System.out.println(g);
			String ff=f.getAbsolutePath();
			String fff[]=ff.split("\\");
			System.out.println(fff.length);
			for(int i=0;i<fff.length;i++){
				if(i!=fff.length-1){
				g=g+fff[i];	
				System.out.println(fff[i]);
				}
			}
			f=new File(g);
		}
		File fi=new File(s);
		if(fi.isFile()||fi.isDirectory()){
			try {
				fi.createNewFile();
			} catch (IOException e) {
				// TODO 自动生成的 catch 块
				e.printStackTrace();
			}
		}
		else
			System.out.println("ERROR");
	}
	public static void main (String[] args){
		CMDTest c=new CMDTest();
		c.getChild();
		System.out.println("请输入要跳转的目录位置：");
		Scanner input=new Scanner(System.in);
		String q=input.next();
		c.updateFile(q);
		c.getChild();
	}
	
}
