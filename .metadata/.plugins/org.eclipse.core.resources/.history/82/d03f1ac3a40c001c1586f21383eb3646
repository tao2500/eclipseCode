package gaoji_1;
import java.io.File;
import java.lang.*;
import java.io.IOException;
import java.util.*;
public class CMDTest {
	File f;
	CMDTest(){
		f=new File(".");
	}
	String[] getRoot(){
		File link[]=f.listRoots();
		String s[]=new String[link.length];
		for(int i=0;i<link.length;i++){
			s[i]=link[i].toString();
		}
		return s;
	}
	void getChild(){
		String line[]=f.list();
		if(f.isFile()){
			System.out.println("当前为文件，没有包含子目录和文件。");
		}
		System.out.println(line[0]);
		for(String s:line){
			System.out.println(s);
		}
	}
	void updateFile(String s){
		String g=new String();
		File fi=new File(s);
		if(s.equals("../")){
			System.out.println(g);
			String ff=f.getAbsolutePath();
			System.out.println("原来的目录为"+ff);
			/*String regex="\\";
			String fff[]=ff.split(regex);*/
			StringTokenizer fff=new StringTokenizer(ff,"\\");
			/*for(int i=0;i<fff.length;i++){
				if(i!=fff.length-1){
				g=g+fff[i];	
				System.out.println(fff[i]);
				}*/
			int i=0;
			while(fff.hasMoreTokens()){
				fff.nextToken();
				i=i+1;
			}
			StringTokenizer ffff=new StringTokenizer(ff,"\\");
			System.out.println("长度为"+i);
			for(int ii=0;ii<i-1;ii++){
				if(ii==0){
					g=g+ffff.nextToken();
				}else
				g=g+"\\"+ffff.nextToken();
			}
			System.out.println("更新后的目录为"+g);
			}
			f=new File(g);
		if(fi.isFile()||fi.isDirectory()){
			try {
				fi.createNewFile();
			} catch (IOException e) {
				// TODO 自动生成的 catch 块
				e.printStackTrace();
			}
		}
		else
			System.out.println("ERROR");
	}
	public static void main (String[] args){
		CMDTest c=new CMDTest();
		c.getChild();
		System.out.println("请输入要跳转的目录位置：");
		Scanner input=new Scanner(System.in);
		String q=input.next();
		c.updateFile(q);
		c.getChild();
	}
	
}
