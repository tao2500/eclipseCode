package studentAdministration;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.*;

public class RedTxt{
	File f;
	RedTxt(){
		
	}
	RedTxt(Flie f){
		this.f=f;
	}
	public ArrayList<Student> RedTxt(){
		ArrayList<Student> list=new ArrayList<Student>();
		Student s=new Student();
		try {
			BufferedReader redtxt=new BufferedReader(new FileReader(f));
			String regex=", ";
			String data[]=new String[5];
			String content=redtxt.readLine();
			while(content!=null){
				data=content.split(regex);
				s.setId(data[0]);
				s.setMane(data[1]);
				s.setCallphonenumber(data[2]);
				s.setDormitorynumber(data[3]);
				s.setClassnumber(data[4]);
				list.add(s);
				//System.out.println(content);
				content=redtxt.readLine();
			}
		} catch (FileNotFoundException e) {
			// TODO 自动生成的 catch 块
			e.printStackTrace();
		} catch (IOException e) {
			// TODO 自动生成的 catch 块
			e.printStackTrace();
		}
		return list;
	}
}
